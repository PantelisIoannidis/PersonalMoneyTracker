@model IEnumerable<PMT.Entities.MoneyAccount>

@{
    ViewBag.Title = ViewText.MoneyAccountsViewIndexTitle;
}

<div class="panel panel-primary use-big-fonts">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="text-right">@Html.DisplayNameFor(model => model.Balance)</th>
                    <th>

                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-right">
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","MoneyAccounts", new { id = item.MoneyAccountId })" class="btn btn-warning btn-xs"><i class="fa fa-fw fa-edit"></i> @ViewText.Edit</a>
                            <a href="@Url.Action("Delete","MoneyAccounts", new { id = item.MoneyAccountId })" class="btn btn-danger btn-xs"><i class="fa fa-fw fa-trash"></i> @ViewText.Delete</a>
                        </td>
                    </tr>
                }
                <tr>
                    <td class="text-right">
                        <strong>@ViewText.Total :</strong>
                    </td>
                    <td class="text-right">
                        <strong>@(((decimal)ViewBag.TotalBalance).ToString("C2"))</strong>
                    </td>
                    <td>

                    </td>
                </tr>
            </tbody>

        </table>
        <p>
            <a href="@Url.Action("Create","MoneyAccounts",null)" class="btn btn-default"><i class="fa fa-fw  fa-plus-circle"></i> @ViewText.CreateNew</a>
        </p>
    </div>
</div>

