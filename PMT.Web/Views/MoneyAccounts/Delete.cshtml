@model PMT.Entities.MoneyAccount

@{
    ViewBag.Title = "Delete Account";
}

<div class="panel panel-primary use-big-fonts">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        <h4>Are you sure you want to delete this account?</h4>
        <h5>Warning, all transactions of the account will be removed.</h5>
        <div>
            <dl class="dl-horizontal">

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <button type="submit" class="btn btn-danger"><i class="fa fa-fw fa-trash"></i> Delete</button>
                    <a href="@Url.Action("Index","MoneyAccounts",null)" class="btn btn-default"><i class="fa fa-fw fa-remove"></i> Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
