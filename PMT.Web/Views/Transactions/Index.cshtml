@model IEnumerable<PMT.Models.TransactionVM>
@using PMT.Common;
@{
    ViewBag.Title = ViewText.TransactionViewIndexTitle;
    var pager = (Pager)ViewBag.Pager;
}

<div class="panel panel-primary use-big-fonts">
    <div class="panel-heading">@ViewBag.Title<span style="float:right">page @pager.CurrentPage / @pager.TotalPages</span></div>
    <div class="panel-body">
        <table class="transTable table table-striped table-condensed table-hover">
            <tbody>
                @foreach (var item in Model)
                {
                    
                    <tr>
                        <input type="hidden" class="transTableId" value="@item.TransactionId" />
                        <td class="col-md-1">
                            <div class="iconInTile text-center">
                                <i class="fa fa-fw @item.SubCategoryIcon"></i>
                            </div>
                        </td>
                        <td class="col-md-5">
                            <div>
                                <strong>@Html.DisplayFor(m => item.SubCategoryName)</strong>
                                @Html.DisplayFor(m=>item.Description)
                            </div>
                        </td>
                        <td class="col-md-4">
                            <div>
                                @Html.DisplayFor(m => item.FormattedDate)
                            </div>

                        </td>
                        
                        <td class="col-md-2 text-right @((item.Amount < 0) ? "negativeNumber":"")">
                            
                            @Html.DisplayFor(m=>item.FormattedAmount)
                        </td>
                    </tr>
                } 
            </tbody>
        </table>
        <div class="row  text-center">
            <div class="col-md-2">
                <a href="@Url.Action("Create","Transactions",null)" class="btn btn-default"><i class="fa fa-fw  fa-plus-circle"></i> @ViewText.CreateNew</a>
            </div>
            <div class="col-md-8">
                <ul class="pagination">
                    <li class="@(pager.CurrentPage==pager.FirstPage?"disabled":"")"><a href="@Url.Action("Index","Transactions",new { page=pager.FirstPage})" aria-label="First"><span aria-hidden="true">First</span></a></li>
                    <li class="@(pager.HasPreviousPage?"":"disabled")"><a href="@Url.Action("Index","Transactions",new { page=pager.PreviousPage})" " aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                    @foreach (var item in pager.NearPages)
                    {
                        <li class="@(pager.CurrentPage==item?"active":"")"><a href="@Url.Action("Index","Transactions",new { page=item})">@item</a></li>
                    }
                    <li class="@(pager.HasNextPage?"":"disabled")"><a href="@Url.Action("Index","Transactions",new { page=pager.NextPage})" " aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
                    <li class="@(pager.CurrentPage==pager.LastPage?"disabled":"")"><a href="@Url.Action("Index","Transactions",new { page=pager.LastPage})"" " aria-label="Last"><span aria-hidden="true">Last</span></a></li>
                </ul>
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Edit","Transactions", null)" id="transTableEditButton" class="btn btn-warning btn-sm"><i class="fa fa-fw fa-edit"></i> @ViewText.Edit</a>
                <a href="@Url.Action("Delete","Transactions",null)" id="transTableDeleteButton" class="btn btn-danger btn-sm"><i class="fa fa-fw fa-trash"></i> @ViewText.Delete</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="transactionDeleteModal" tabindex="-1" role="dialog" aria-labelledby="transactionDeleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="transactionDeleteModalLabel">@ViewText.TransactionViewDeleteTitle</h4>
            </div>
            <div class="modal-body">
                <h4>@MessagesText.TransactionDeleteWarningLine</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="transTableDeleteConfirmButton" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
    <script type="text/javascript">
        $(function () {
            pmt.onDocumentLoadIndexTransaction();
        });
    </script>
}