@model IEnumerable<PMT.Entities.UserAccount>

@{
    ViewBag.Title = "Your Accounts";
}


<div class="panel panel-primary use-big-fonts">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>Balance</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            $0000  
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","UserAccounts", new { id = item.UserAccountId })" class="btn btn-warning btn-xs"><i class="fa fa-fw fa-edit"></i> Edit</a>
                            <a href="@Url.Action("Delete","UserAccounts", new { id = item.UserAccountId })" class="btn btn-danger btn-xs"><i class="fa fa-fw fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
        </p>
    </div>
</div>
