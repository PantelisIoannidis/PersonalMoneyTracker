@model PMT.Models.CategoryVM
@{

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary use-big-fonts">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-horizontal">

                @Html.HiddenFor(model=>model.Type)
                @Html.HiddenFor(model => model.SubCategoryId)
                @Html.HiddenFor(model=>model.IsCategory)
                
                <div class="form-group categoryListDropDown">
                    <div class="col-md-3 col-md-offset-2">
                        @Html.Label("categoryBtn", ModelText.CategoryName, htmlAttributes: new { @class = "control-label" })
                    </div>
                        <div class="col-md-7">
                            <div class="dropdown">
                                <button href="#" class="btn btn-default dropdown-toggle selectdd" type="button" id="categoryBtn" value="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <i>@ViewText.NoneSelected</i>
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu selectdd dropdown-category scrollable-menu" aria-labelledby="categoryBtn"></ul>
                            </div>
                            @Html.HiddenFor(model => model.CategoryId)
                            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3 col-md-offset-2">
                            @Html.LabelFor(model => model.Name, ModelText.SubCategoryName, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 col-md-offset-2">
                            <label class="control-label" for="chooseIconBtn">Icon</label>
                        </div>
                        <div class="col-md-7">
                            @Html.HiddenFor(model => model.IconId)
                            <a href="#" id="chooseIconBtn" class="use-big-fonts btn btn-default"><i class="fa fa-fw @Model.IconId"></i><span id="iconName"></span></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 col-md-offset-2">
                            <label class="control-label" for="chooseColorBtn">Color</label>
                        </div>
                        <div class="col-md-7">
                            <div class="input-group color-picker">
                                @Html.HiddenFor(model => model.Color)
                                <input id="html5picker" type="color" class="form-control" />
                                <span class="input-group-addon"><i></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-7">
                            <button type="submit" class="btn btn-success"><i class="fa fa-fw fa-save"></i> @ViewText.Save</button>
                            <a href="@Url.Action("Index","Categories",null)" class="btn btn-default"><i class="fa fa-fw fa-remove"></i> @ViewText.Cancel</a>
                        </div>
                    </div>
                    <div>
                        <a href="@Url.Action("Index","Categories",null)" class="btn btn-info"><i class="fa fa-fw fa-arrow-left"></i> @ViewText.Back</a>
                    </div>
                </div>
            </div>
        </div>
        }
        @Html.Partial("_IconSelectionPartial")

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <script type="text/javascript">
                $(function () {
                    pmt.onDocumentLoadCategoriesCreate();
                });
            </script>
        }


