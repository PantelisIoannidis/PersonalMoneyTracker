<div class=" transactionFilters row">
    <div class="col-md-2">

    </div>
    <div class="col-md-2">
        <button id="AccountFilterId" value="@ViewBag.TransactionFilter.AccountFilterId" class="btn btn-default dropdown-toggle selectsmalldd" data-toggle="dropdown" aria-expanded="false">
            @(ViewBag.TransactionFilter.AccountFilterName)
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu selectsmalldd dropdown-accountFilter">
            @foreach (var item in ViewBag.TransactionFilter.MoneyAccountChoiceFilter)
            {
                <li><a data-id="@item.MoneyAccountId" href="#">@item.Name</a></li>
            }
        </ul>
    </div>
    <div class="col-md-8">
        <div class="btn-toolbar">

            <div class="btn-group">
                <button id="PeriodFilterId" value="@ViewBag.TransactionFilter.PeriodFilterId" class="btn btn-default dropdown-toggle selectsmalldd" data-toggle="dropdown" aria-expanded="false">
                    @ViewBag.TransactionFilter.PeriodFilterName
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu selectsmalldd drop-downPeriodFilter">
                    @foreach (var item in ViewBag.TransactionFilter.PeriodEnum)
            {
                        <li><a data-id="@item.Key" href="#">@item.Value</a></li>
                    }
                </ul>
                <a href="#" class="btn btn-default">&laquo;</a>
                <a href="#" class="btn btn-default">@ViewBag.TransactionFilter.PeriodDescription</a>
                <a href="#" class="btn btn-default">&raquo;</a>
            </div>
        </div>
    </div>
</div>
